{
	"name": "team-city-tree",
	"displayName": "team_city_tree",
	"description": "View a tree for Team City, run and stop builds",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tc_tree",
		"onCommand:tc_tree.connect"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tc-explorer",
					"title": "TeamCity",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"tc-explorer": [
				{
					"id": "tc_tree",
					"name": "Project Tree",
					"when": "build == false"
				},
				{
					"id": "tc_build",
					"name": "Build Tree",
					"when": "build == true"
				}
			],
			"explorer": []
		},
		"commands": [
			{
				"command": "tc_tree.refresh",
				"title": "TeamCity: Refresh",
				"icon": {
					"light": "resources/light/sync.svg",
					"dark": "resources/dark/sync.svg"
				}
			},
			{
				"command": "tc_build.refresh",
				"title": "TeamCity: Refresh Build"
			},
			{
				"command": "tc_tree.update_login",
				"title": "TeamCity: Update Login configuration"
			},
			{
				"command": "tc_build.open_build",
				"title": "TeamCity: Open Build"
			},
			{
				"command": "tc_build.back",
				"title": "TeamCity: Back to Project Tree",
				"icon":{
					"light": "resources/light/back.svg",
					"dark": "resources/dark/back.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "tc_tree.refresh",
					"when": "view == tc_tree",
					"group": "navigation"
				},
				{
					"command": "tc_build.back",
					"when": "view == tc_build",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "",
			"title": "Team City Tree extension configuration",
			"properties": {
				"tc_tree": {
					"type": "object",
					"description": "configuration for TeamCity",
					"properties": {
						"username": {
							"type": "string",
							"default": "username",
							"description": "Login for TeamCity"
						},
						"password": {
							"type": "string",
							"default": "password",
							"description": "Password fot TeamCity"
						},
						"url": {
							"type": "string",
							"default": "http://teamcity.com:1234",
							"description": "TeamCity link"
						},
						"visible": {
							"type": "array",
							"description": "Configure visible projects",
							"items": {
								"title": "inner objects",
								"default": [
									"buildTypeIdOne",
									"buildTypeIdTwo"
								]
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"teamcity-rest-api": "0.0.8"
	}
}